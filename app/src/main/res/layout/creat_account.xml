<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="16dp"
    tools:context=".CreatAccount"
    android:background="@drawable/bgtela"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="25dp"
        android:background="@drawable/logo1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-smallcaps"
        android:text="CRIAR CONTA"
        android:layout_marginTop="40dp"
        android:gravity="center"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NOME USUÁRIO"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="#22FFFFFF"
        android:background="@drawable/fundo_caixa_texto"
        android:layout_marginTop="30dp"
        android:id="@+id/username"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EMAIL USUÁRIO"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="#22FFFFFF"
        android:background="@drawable/fundo_caixa_texto"
        android:layout_marginTop="20dp"
        android:id="@+id/email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SENHA USUÁRIO"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="#22FFFFFF"
        android:background="@drawable/fundo_caixa_texto"
        android:id="@+id/password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fundo_caixa_button"
        android:text="Criar"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:id="@+id/register"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Já tenho Uma Conta"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_login"/>

</LinearLayout>